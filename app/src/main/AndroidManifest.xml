<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.unipi.torpiles.smartalert">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main"
        android:usesCleartextTraffic="true">

        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBGSfnL6FaVScHUPN9oN8T1v6MkRXp715w" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- region [START Activities] -->
            <!-- Splash Screen Activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.SplashActivity"
                android:theme="@style/Theme.Main.NoActionBar"
                android:screenOrientation="fullSensor"
                android:exported="true">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>

            <!-- Home/Main Activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.MainActivity"
                android:theme="@style/Theme.Main.NoActionBar3">
            </activity>

            <!-- Problem Details Activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.SubmissionDetailsActivity"
                android:theme="@style/Theme.Main.NoActionBar3"
                android:parentActivityName="com.unipi.torpiles.smartalert.ui.activities.MainActivity"
                android:exported="true">

                <intent-filter>
                    <action android:name="ProductDetailsActivity"/>
                    <category android:name="android.intent.category.DEFAULT"/>
                </intent-filter>

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.torpiles.smartalert.ui.activities.MainActivity" />
            </activity>

            <!-- Sign In activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.SignInActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.Main.NoActionBar4"
                android:parentActivityName="com.unipi.torpiles.smartalert.ui.activities.MainActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.torpiles.smartalert.ui.activities.MainActivity" />
            </activity>

            <!-- Sign Up activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.SignUpActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.Main.NoActionBar4"
                android:parentActivityName="com.unipi.torpiles.smartalert.ui.activities.SignInActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.torpiles.smartalert.ui.activities.SignInActivity" />
            </activity>

            <!-- Add submission activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.AddSubmissionActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.Main.NoActionBar4"
                android:parentActivityName="com.unipi.torpiles.smartalert.ui.activities.MainActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.torpiles.smartalert.ui.activities.MainActivity" />
            </activity>

            <!-- Forgot Password activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.ForgotPasswordActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.Main.NoActionBar4"
                android:parentActivityName="com.unipi.torpiles.smartalert.ui.activities.SignInActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.torpiles.smartalert.ui.activities.SignInActivity" />
            </activity>

            <!-- Update Profile activity -->
            <activity
                android:name="com.unipi.torpiles.smartalert.ui.activities.EditProfileActivity"
                android:launchMode="singleTask"
                android:windowSoftInputMode="adjustResize"
                android:theme="@style/Theme.Main.NoActionBar3"
                android:parentActivityName="com.unipi.torpiles.smartalert.ui.activities.SignInActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.unipi.torpiles.smartalert.ui.activities.SignInActivity" />
            </activity>

        <!-- endregion [END Activities] -->
    </application>
</manifest>
